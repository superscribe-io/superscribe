{
	"compilerOptions": {
		"module": "commonjs",
		"target": "ES2020",
		"moduleResolution": "node",
		"strict": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"resolveJsonModule": true,
		"paths": {
			"@common/*": ["./common/*"],
			"@query/*": ["./query/*"],
			"@schema/*": ["./schema/*"],
			"@utils/*": ["./utils/*"]
		}
	},
	"exclude": ["node_modules", "extensions"]
}
